{% extends 'base.html.twig'  %}

{% block title %}Hello Rufftech - Robots{% endblock %}

{% block body %}
    <h2>Robots</h2>
    <div class="input-group"> <span class="input-group-addon">Filter</span>
    <input id="filter" type="text" class="form-control" placeholder="Type here...">
    </div>
    {% if robots|length > 0 %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Year</th>
                <th>Created at</th>
            </tr>
            </thead>
            <tbody class="searchable">
                {% for robot in robots %}
                    <tr>
                        <td>{{ robot.id }}</td>
                        <td>{{ robot.name }}</td>
                        <td>{{ robot.type }}</td>
                        <td>{{ robot.year }}</td>
                        <td>{{ robot.createdAt|date('Y.m.d') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script type="application/javascript">
        $(document).ready(function () {
            (function ($) {
                $('#filter').keyup(function () {
                    var rex = new RegExp($(this).val(), 'i');
                    $('.searchable tr').hide();
                    $('.searchable tr').filter(function () {
                        return rex.test($(this).text());
                    }).show();
                })
            }(jQuery));
        });
    </script>
{% endblock %}





